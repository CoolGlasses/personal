body {
    background-color: gray;
}

#homeBody {
    display: grid;
    grid-template-rows: auto auto auto auto;
    justify-content: center;
}

#topHomeContainer {
    display: grid;
    grid-row: 1 / 2;
    grid-template-columns: 39% 22% 39%;
    grid-template-rows: auto auto auto;
    padding: 23px;
}

#nameHeader {
    font-family: 'Times New Roman', Times, serif;
    grid-column: 1 / 2;
    grid-row: 1 / 2;
}

#mainPortrait {
    grid-column: 3 / 4;
    grid-row: 1 / 3;
    border-width: 10px;
    border-style: double;
    border-color: green;
    border-collapse: separate;
}

#coreValues {
    grid-column: 1 / 2;
    grid-row: 2 / 3;
}

#homeNavBar {
    display: grid;
    grid-row: 2 / 3;
    grid-template-columns: auto auto;
    background-color: gray;
    border-radius: 12px;
    border-color: black;
    border-style: double;
    padding: 23px;
}

#softwareProjectsButton {
    display: grid;
    grid-column: 1 / 2;
    background-color: greenyellow;
    border-radius: 12px;
    margin: 12px;
    text-align: center;
}

#softwareProjectsButton:hover {
    cursor: pointer;
}

#coachAButton {
    display: grid;
    grid-column: 2 / 3;
    background-color: hotpink;
    border-radius: 12px;
    margin: 12px;
    text-align: center;
}

#coachAButton:hover {
    cursor: pointer;
}

#availabilityBar {
    grid-row: 3 / 4;
    padding: 23px;
    margin: 12px;
}

