body {
    color: white;
    background-image: url(5516336932_02af25c1fa_b.jpeg);
    display: grid;
}

h1 {
    text-align: center;
}

ul {
    padding: 1px;
}

il {
    padding: 1px;
}

#homeBody {
    display: grid;
    grid-template-rows: auto auto auto auto;
    width: 85%;
    justify-self: center;
    align-self: center;
}

#topHomeContainer {
    display: grid;
    grid-row: 1 / 2;
    grid-template-columns: 39% 22% 39%;
    grid-template-rows: auto auto auto;
    padding: 23px;
    width: 60%;
    justify-self: center;
}

#nameHeader {
    font-family: 'Times New Roman', Times, serif;
    grid-column: 1 / 2;
    grid-row: 1 / 2;
}

#mainPortrait {
    grid-column: 3 / 4;
    grid-row: 1 / 3;
    border-width: 10px;
    border-style: double;
    border-color: green;
    border-collapse: separate;
}

#coreValues {
    grid-column: 1 / 2;
    grid-row: 2 / 3;
}

#homeNavBar {
    display: grid;
    grid-row: 2 / 3;
    grid-template-columns: auto auto;
    background-color: rgba(128, 128, 128, .45);
    border-radius: 12px;
    border-color: black;
    border-style: double;
    padding: 23px;
    color: black;
    min-width: 60%;
    max-width: 75%;
    justify-self: center;
}

#softwareProjectsButton {
    display: grid;
    grid-column: 1 / 2;
    background-color: yellow;
    border-radius: 12px;
    margin: 12px;
    text-align: center;
}

#softwareProjectsButton:hover {
    cursor: pointer;
}

#coachAButton {
    display: grid;
    grid-column: 2 / 3;
    background-color: purple;
    border-radius: 12px;
    margin: 12px;
    text-align: center;
}

#coachAButton:hover {
    cursor: pointer;
}

#availabilityBar {
    grid-row: 3 / 4;
    padding: 23px;
    margin: 12px;
    text-align: center;
}

#blurbContainer {
    display: grid;
    width: 60%;
    justify-self: center;
}

#softwareProjectsBlurb {
    display: grid;
}

#coachABlurb {
    display: none;
}

.blurb {
    display: grid;
    grid-row: 4 / 5;
    background-color: rgba(0, 0, 0, .85);
    border-style: solid;
    border-radius: 12px;
    border-color: black;
    min-width: 75%;
    min-height: 300px;
    padding: 8px;
}

#copyrightNotice {
    text-align: center;
    padding: 50px;
}